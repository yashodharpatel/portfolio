// import LinkButton from "./util/LinkButton.astro";

import TAGS from "./TAGS";

const PROJECTS = [
  {
    title: "Authease",
    subtitle: "Simplifying Authentication, Amplifying Development",
    description:
      "Authease is a Node.js library that simplifies user authentication for frontend applications. It offers modular components, centralized configuration, and seamless integration with various frameworks, allowing developers to implement secure authentication features without extensive backend setup.",
    link: "https://svgl.vercel.app/",
    github: "https://github.com/pheralb/svgl",
    image: "/projects/svgl.webp",
    tags: [
      TAGS.NODE,
      TAGS.EXPRESS,
      TAGS.TYPESCRIPT,
      TAGS.NEXT,
      TAGS.TAILWIND,
      TAGS.MONGODB,
      TAGS.REDIS,
      TAGS.ROLLUP,
    ],
  },
  {
    title: "Codingpeer",
    subtitle: "Connecting Coders, Inspiring Innovation",
    description:
      "Codingpeer is a web application designed to connect developers and tech enthusiasts globally. Built with React.js and Firebase, it facilitates project collaboration, partner searching, and networking opportunities. Future plans include real-time chat, video conversations, and group creation features.",
    link: "https://adventjs.dev",
    image: "/projects/svgl.webp",
    tags: [TAGS.REACT, TAGS.FIREBASE, TAGS.BOOTSTRAP, TAGS.SASS],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(
      ({ image, title, subtitle, description, tags, link, github }) => (
        <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
          <div class="w-full md:w-1/4">
            <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
              <img
                alt="Recently arrived vs 5 years in New Zealand"
                class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                loading="lazy"
                src={image}
              />
            </div>
          </div>

          <div class="w-full md:w-3/4 ">
            <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
              {title}
            </h3>
            <div class="text-sm text-gray-600 dark:text-gray-300 mt-[2px]">
              {subtitle}
            </div>
            <div class="flex flex-wrap mt-4">
              <div class="mb-2 text-gray-700 dark:text-gray-400 text-justify">
                {description}
                <a
                  href="https://yashodharpatel.bio.link"
                  class="hover:underline text-yellow-600 dark:text-yellow-200"
                  target="_blank"
                >
                  Know More >
                </a>
              </div>

              <ul class="flex flex-row flex-wrap mt-2 gap-2">
                {tags.map((tag) => (
                  <li>
                    <span
                      class={`flex gap-x-2 rounded-full text-xs  py-1 px-2 text-yellow-600 bg-gray-100 border border-gray-300 dark:bg-gray-800 dark:border-gray-600 dark:text-yellow-200`}
                      class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                      class="inline-flex items-center justify-center gap-2 px-4 py-1 text-gray-800 transition bg-gray-100 border border-gray-300 rounded-full dark:bg-gray-800 dark:border-gray-600 dark:text-white focus-visible:ring-yellow-500/80 text-md hover:bg-gray-900 hover:border-gray-700 group max-w-fit hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black"
                    >
                      {/* <tag.icon class="size-4" /> */}
                      {tag.name}
                    </span>
                  </li>
                ))}
              </ul>

              {/* <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer> */}
            </div>
          </div>
        </article>
      )
    )
  }
</div>
